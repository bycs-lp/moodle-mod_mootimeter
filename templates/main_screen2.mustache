<div class="container-fluid mootimetercontainer isNotNewPage {{{containerclasses}}}">
  <div class="row h-100">
    {{#showpagescol}}
    <div class="mootimetercol mootimetercolpages" id="mootimeter-pages-col">
      <ul id="mootimeter-pages-list" class="">
        {{{pages}}}
      </ul>
    </div>
    {{/showpagescol}}
    {{#isediting}}
    {{#settings}}
    <div class="mootimetercol mootimetercoledit">
      <div class="mootimetersettings mootimeterfullwidth">
        <div class="mootimeter-header-wrapper">
          <h4>{{toolname}}</h4>
          <div class="mootimeter-page-dropdown">
            <i class="icon fa fa-gear fa-light mootimeter-page-dropbtn" aria-hidden="true"></i>
            <div class="mootimeter-page-dropdown-content">
              <div
                id="btn-delete_page"
                class="mootimeter-delete-page-btn"
                data-pageid="{{pageid}}"
                >{{#str}} delete_page, mod_mootimeter {{/str}}</div>
            </div>
          </div>
        </div>
        {{{settings}}}
      </div>
    </div>
    {{/settings}}
    {{/isediting}}
    <div class="mootimetercol mootimetercolcontent">
      {{{snippet_content_menu}}}
      <div class="mootimeter-content-wrapper">
        {{{pagecontent}}}
      </div>
    </div>
  </div>
  {{! {{> mod_mootimeter/elements/snippet_modal}}
</div>

{{> mod_mootimeter/elements/snippet_mootimeter_state}}

{{#js}}
require(['mod_mootimeter/main'], (module) => module.init());
require(['mod_mootimeter/reload_pagelist'], (module) => module.init("{{isediting}}"));
{{/js}}