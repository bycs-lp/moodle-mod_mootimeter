{{!
Example context (json):
    {
        "accordionelementheaderid": 'myaccordionelement-1',
        "accordionelementbodyid": "myaccordionelementbody-1",

        "accordionelementheading": "My Heading",
        "accordionelementcontent": "This is the body of the accordion",
    }
}}

<div class="accordion mootimeter-accordion" id="{{accordionwrapperid}}">
    {{#section}}
        <div class="card border rounded" id="{{sectionid}}">
            <div class="card-header rounded" id="{{sectionid}}_header">
                <div class="position-relative d-flex align-items-center mr-1">
                    <a data-toggle="collapse" data-target="#{{sectionid}}_body" aria-expanded="true" role="button"
                       aria-controls="{{sectionid}}_body" class="btn p-0 icons-collapse-expand justify-content-center">
                        <span class="btn btn-icon mr-1 expanded-icon icon-no-margin p-2" title="Collapse">
                            <i class="icon fa fa-chevron-down fa-fw" aria-hidden="true"></i>
                        </span>
                        <span class="btn btn-icon mr-1 collapsed-icon icon-no-margin p-2" title="Expand">
                            <i class="icon fa fa-chevron-right fa-fw" aria-hidden="true"></i>
                        </span>
                        <h4 class="mb-0" class="d-flex align-self-stretch align-items-center mb-0">{{title}}</h4>
                    </a>
                </div>
            </div>
            <div id="{{sectionid}}_body" class="collapse show" aria-labelledby="{{sectionid}}_header">
                <div class="card-body">
                    {{content}}
                </div>
            </div>
        </div>
    {{/section}}
</div>