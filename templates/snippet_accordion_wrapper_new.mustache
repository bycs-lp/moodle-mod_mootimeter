{{#isNewPage}}
	<div class="mootimetersettings-head">
		<h4>{{tool}}</h4>
		<i class="icon fa fa-gear fa-light" aria-hidden="true"></i>
	</div>
	<div>
		<label for="mootimeter_title" class="form-label">{{#str}} title , mod_mootimeter {{/str}}</label>
		<input id="mootimeter_title" type="text" class="mootimeter-input mootimeterfullwidth" name="title"
			value="{{ title }}" />
	</div>
	<div>
		<label for="mootimeter_question" class="form-label">{{#str}} question , mod_mootimeter {{/str}}</label>
		<textarea class="mootimeter-input mootimeterfullwidth" id="mootimeter_question"
			name="question">{{{question}}}</textarea>
	</div>
	<div>
		<label for="mootimeter_sortorder" class="form-label">{{#str}} sortorder , mod_mootimeter {{/str}}</label>
		<input id="mootimeter_sortorder" type="number" class="form-control mootimeterfullwidth" name="sortorder"
			value="{{ sortorder }}" />
	</div>
{{/isNewPage}}
