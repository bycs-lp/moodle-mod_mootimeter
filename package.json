{
  "name": "moodle-mod_mootimeter",
  "devDependencies": {
    "csso-cli": "^4.0.2",
    "node-sass": "^9.0.0"
  },
  "scripts": {
    "compile-sass": "node-sass styles.scss styles.unminified.css",
