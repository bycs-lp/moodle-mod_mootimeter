{{!
    @template mootimetertool_wordcloud/view_results

    Wordcloud results visualization template.

    Displays wordcloud results with permission handling.
    Shows denial message to students when teacher permission is required.

    Context variables:
    @param bool teacherpermissiontoview - Whether user has permission to view results
    @param string uniqid - Unique ID for DOM elements
    @param string answerslist - JSON-encoded array of answers with counts
    @param int pageid - Page ID for AJAX updates
    @param int lastupdated - Timestamp of last update for live refresh
}}

{{! No permission view - Students see this when teacherpermissiontoview is disabled }}
{{^teacherpermissiontoview}}
    <div class="mootimeterfullwidth mootimeter-colcontent-preview mootimeter-width-xl mootimeter-vertical-align"
        id="mtmt_wordcloud_no_answer_wrapper_{{uniqid}}"
    >
        {{#str}}no_answer_due_to_showteacherpermission, mootimetertool_wordcloud{{/str}}
    </div>
{{/teacherpermissiontoview}}

{{! Results view - Teachers and authorized users see wordcloud visualization }}
{{#teacherpermissiontoview}}
<div
  class="mootimeterfullwidth mootimeter-colcontent-preview mootimeter-width-xl"
  id="wordcloudcanvas_{{uniqid}}"
  style="display:block;"
  data-answers="{{answerslist}}"
  data-pageid="{{pageid}}"
  data-lastupdated="{{lastupdated}}"
>
</div>

{{#js}}
    require(['mootimetertool_wordcloud/redraw_wordcloud'], (module) => module.init("wordcloudcanvas_{{uniqid}}"));
{{/js}}
{{/teacherpermissiontoview}}
