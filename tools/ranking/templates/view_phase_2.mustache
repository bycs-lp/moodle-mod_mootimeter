{{#withwrapper}}
<div class="mootimetercontainer {{{containerclasses}}}">
  {{/withwrapper}}

  <div class="mootimeter-colcontent-preview mootimeter-width-xl mtmt_ranking_phase_2" id="mtmt_ranking_refresh_{{uniqid}}">

    {{{error}}}

    <div class="mootimeter-colcontent-preview-header mtmt-ranking-flex-row " id="mtmt_tool-colct-header">

      {{#toolname}}
      {{> mod_mootimeter/elements/snippet_pill}}
      {{/toolname}}

      {{#indicator_bar}}
      {{> mootimetertool_ranking/snippet_phase_selector}}
      {{/indicator_bar}}

    <div class="mootimeter-colcontent-preview-header" id="mtmt_tool-colct-header">
      <h4 id="mtm_heading_phase_2_{{uniqid}}">{{{heading_phase_2}}}</h4>
    </div>

    <div id="mtmt_ranking_pills">

      <table class="table table-striped">
        <thead>
          <th>{{#str}} phrase, mootimetertool_ranking {{/str}}</th>
          <th>{{#str}} approved, mootimetertool_ranking  {{/str}}</th>
          <th></th>
        </thead>
        {{#phrases}}
        <tr>
          <td>{{phrase}}</td>
          <td>{{> mootimetertool_ranking/snippet_toggle_yes_no}}</td>
          <td>
                {{#deletebutton}}{{>mod_mootimeter/elements/snippet_delete_cross}}{{/deletebutton}}
          </td>
        </tr>
        {{/phrases}}
      </table>
    </div>

    {{#input_answer}}
    {{> mod_mootimeter/elements/snippet_input}}
    {{#js}}
    require(['mootimetertool_ranking/store_phrase'], (module) => module.init(
    "{{mtm-input-id}}_{{uniqid}}",
    "{{mtm-button-id}}_{{uniqid}}"
    ));
    {{/js}}
    {{/input_answer}}

    {{#button_answer}}
    {{> mod_mootimeter/elements/snippet_button_full}}
    {{/button_answer}}


  </div>
  {{#withwrapper}}
</div>
{{/withwrapper}}

{{#js}}
require(['mod_mootimeter/reload_page_on_state_change'], (module) => module.init("mtmt_ranking_refresh_{{uniqid}}"));
{{/js}}
